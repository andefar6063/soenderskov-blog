---
interface Props {
  error: unknown;
}

const { error } = Astro.props;
---
<div class="bg-greyprimary text-center h-screen flex flex-col justify-center">
  <h1 class="text-4xl text-textprimary mb-4">An error occurred.</h1>
  <p class="text-textprimary mb-4">
    {error instanceof Error ? error.message : "Unknown error"}
  </p>
  <p class="text-textprimary">
    Return to the home page: <a href="/" class="text-primary">here</a>
  </p>
</div>
